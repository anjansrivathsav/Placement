<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_signin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE7152D"
    tools:context="iiitv.com.placement.myplacement.SigninActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn1"
        android:text="signin"
        android:background="#FFBECC20"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/ed2"
        android:layout_alignRight="@+id/btn2"
        android:layout_alignEnd="@+id/btn2"
        android:layout_marginRight="42dp"
        android:layout_marginEnd="42dp" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="Password..."
        android:id="@+id/ed2"
        android:background="@drawable/inandout"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btn2"
        android:layout_alignStart="@+id/btn2" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:hint="Email..."
        android:id="@+id/ed1"
        android:background="@drawable/inandout"
        android:layout_above="@+id/ed2"
        android:layout_alignLeft="@+id/ed2"
        android:layout_alignStart="@+id/ed2"
        android:layout_marginBottom="28dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn3"
        android:text="forget password"
        android:background="#FFE7152D"
        android:layout_below="@+id/btn2"
        android:layout_alignRight="@+id/btn2"
        android:layout_alignEnd="@+id/btn2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sigup with an account?"
        android:id="@+id/btn2"
        android:background="#FFE7152D"
        android:layout_marginLeft="84dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/btn1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
